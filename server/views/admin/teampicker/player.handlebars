{{> modal/teampicker_player}}
{{> modal/teamSeasons}}

<div class="container">
    <div class="page-header">
        {{#if player}}
        <h4>The following Players have not been assigned to a team.</h4>
        <h6>If you wish to review any of their applications,
        <a href="/admin/applications/player"> CLICK HERE</a> to export an excel spreadsheet.</h6>
        {{else}}
        <h4>There are not any pending player registrations at this time.</h4>
        {{/if}}
    </div>
    <table class="table table-bordered table-hover" style="text-align:center">
        <thead>
            <tr>
                <td>Name</td>
                <td>Application</td>
                <td>Team trying out for</td>
                <td>Position</td>
                <td>Add to team</td>
                <td>Cut</td>
            </tr>
        </thead>
        <tbody>
            {{#each player as |player|}}
                {{#notEqual player.__t "player-registration"}}
                    {{> teampicker/oldPlayer player}}
                {{else}}
                    {{> teampicker/newPlayer player}}
                {{/notEqual}}
            {{/each}}
        <tbody>
    </table>
</div>
