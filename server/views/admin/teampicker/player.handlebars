<div class="container">
    <ul class="list-group">
        {{#if applicants}}
        {{#each applicants}}
        <li class="list-group-item">
            <a href="#{{this._id}}" role="button" data-toggle="collapse">
                {{this.lastname}}, {{this.firstname}}
            </a>
            <div class="collapse" id="{{this._id}}">
                <form action="/admin/assign/player?id={{this._id}}" method="post">
                    <select name="team">
                        <option disabled selected selected>Select A Team</option>
                        {{> scorecard/_teamDropdown2}}
                    </select>
                    <select name="position">
                        <option disabled selected selected>Select A Position</option>
                        <option value="Right Wing">Right Wing</option>
                        <option value="Left Wing">Left Wing</option>
                        <option value="Center">Center</option>
                        <option value="Right Defense">Right Defense</option>
                        <option value="Left Defense">Left Defense</option>
                        <option value="Goalie">Goalie</option>
                    </select>
                    {{#if this.jersey_number_choices}}
                    <select name="jersey_number">
                        <option disabled selected>Select A Jersey Number</option>
                        {{#each jersey_number_choices}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                    <input type="submit" class="addToTeam"  value="Add to team">
                    {{else}}
                    <label>Jersey Number:</label>
                    <input type="number" min="0" max="100" name="jersey_number" value={{this.team.jersey_number}}>
                    <input type="submit" class="addReturningPlayer"  value="Add to team">
                    {{/if}}
                </form>    
            </div>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <div class="jumbotron">
        <h3>Nothing to see here</h3>
        <a href="/">Back</a>
    </div>
    {{/if}}
</div>
