
<div class="container">
    <h3>Assign these coaches to a team</h3>
    {{#if applicants}}
       <ul class="list-group">
        {{#each applicants}}
        <li class="list-group-item">
            <a href="#{{this._id}}" role="button" data-toggle="collapse">
                {{this.lastname}}, {{this.firstname}}
            </a>
            <div class="collapse" id="{{this._id}}">
                <form>
                    <select name="team">
                        <option disabled selected>Select A Team</option>
                        {{> scorecard/_teamDropdown2}}
                    </select>
                    <select name="role">
                        <option disabled selected>Select A Position</option>
                        <option value="Head Coach" required>Head Coach</option>
                        <option value="Assistant Head Coach">Assistant Head Coach</option>
                        <option value="Assistant Coach for Defense">Assistant Coach for Defense</option>
                        <option value="Assistant Coach for Forwards">Assistant Coach for Forwards</option>
                        <option value="Other">Other</option>
                    </select>
                    <input type="submit" class="demo"  value="Add to team">
                </form>    
            </div>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <h3>Nothing here</h3>
    {{/if}}
</div>