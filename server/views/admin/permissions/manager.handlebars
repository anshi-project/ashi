<h1>A.S.H.I. Managers</h1>
<table class="table table-bordered table-condensed">
  	<thead>
  		<tr>
  			<td>Name</td>
  			<td>Division</td>
        <td>Phone</td>
  			<td>Secondary Phone</td>
  			<td>Email</td>
  			<td>Secondary Email</td>
  			<td>Username</td>
        <td>Status</td>
        <td>Update</td>
  			<td>Record</td>
  		</tr>
  	</thead>
  	{{#each user}}
  	<tr class="row-{{this.status}} table-row">
  	<td>{{this.fullname}}</td>
    <td>{{this.division}}</td>
  	<td>{{this.contact.phone1}}</td>
  	<td>{{this.contact.phone2}}</td>
  	<td>{{this.contact.email}}</td>
  	<td>{{this.contact.alt_email}}</td>
  	<td>{{this.username}}</td>
    <td>{{this.status}}</td>
    <td>
    <button class="permission btn btn-sm" data-url="/manager/id=?{{this._id}}" >Grant Permissions</button>
    </td>
    <td>
      <a href="/admin/records/manager?id={{this._id}}" target="_blank">View</a>
    </td>
  </tr>
  {{/each}}
</table>