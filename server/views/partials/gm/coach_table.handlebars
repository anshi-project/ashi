<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Email</th>
      <th>Phone</th> 
    </tr>
  </thead>
  <tbody>
    {{#each coaches}}
    <tr>  
      <td>{{this.fullname}}</td>
      <td>{{this.team.role}}</td>
      <td>
        <a href="mailto:{{this.contact.email}}" class="coach-email-cell"> {{this.contact.email}}</a>
      </td>
      <td>{{this.contact.phone1}}</td>
    </tr>
    {{/each}}
  </tbody>
</table> 