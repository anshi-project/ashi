<div class="container">
	<form id="player-records-edit" method="post" action="/admin/records/{{type}}?id={{id}}&_method=PUT" >
	<div class="row well">
		<fieldset class="input-group">
		{{#each fields.part1}}
		<div class="col-xs-2 {{this.class}}">
		<label for={{this.name}} class="control-form">{{this.label}}</label>
		<input type={{this.type}} class="form-control" value="{{this.value}}" name={{this.name}}>
		</div>
		{{/each}}
		</fieldset>
	</div>

	<div class="row well">
		<fieldset>
		{{#each fields.part2}}
		<div class="form-group col-xs-2">
		<label for={{this.name}} class="control-form">{{this.label}}</label>
		<input type="text" class="form-control" value="{{this.value}}" name={{this.name}}>
		</div>
		{{/each}}
		</fieldset>
	</div>
    {{#if fields.part3}}
	<div class="row well">
		<fieldset>
		{{#each fields.part3}}
		<div class="form-group col-xs-2">
		<label for={{this.name}} class="control-form">{{this.label}}</label>
		<input type="text" class="form-control" value="{{this.value}}" name={{this.name}}>
		</div>
		{{/each}}
		</fieldset>
	</div>
	{{/if}}
	{{#if fields.part4}}
	<div class="well">
		{{#each fields.part4}}
		<label for={{this.name}}>{{this.label}}</label>
		<textarea class="form-control" name={{this.name}}>{{this.value}}</textarea>
		{{/each}}
	</div>
	{{/if}}
	<input type="submit" value="Update Record">
	</form>
</div>	
<style type="text/css"> .well{color:black;}</style>