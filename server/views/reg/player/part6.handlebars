<form id="registration-form" action="/register/submit/player" method="post">
	<div class="container-fluid">
	    {{>reg/common/header}}
        <div class="form-group">
            <label for="background[education]" class="control-form">Education:</label>
            <textarea class="form-control" name="background[education]"></textarea>
        </div>
        <div class="form-group">
            <label for="background[hockey_history]" class="control-form">Hockey History:</label>
            <textarea class="form-control" name="background[hockey_history]"></textarea>
        </div>    
            <div class="form-group">
            <label for="background[other_sports]" class="control-form">Talk About Any Other Sports You've Played:</label>
            <textarea class="form-control" name="background[other_sports]"></textarea>
        </div>
        <div class="form-group">
            <label for="background[career_highlights]" class="control-form">Tell us about any awards or other highlights:</label>
            <textarea class="form-control" name="background[career_highlights]"></textarea>
        </div>
     <hr>    
      <progress value="5" max="6"></progress><br>
      <a href="/register/player?part=5" class="btn btn-default">Back</a> 
      <input type="submit" class="btn btn-primary" value="Submit">
    </div>
</form>



