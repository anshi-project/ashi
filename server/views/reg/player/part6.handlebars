<form id="registration-form" action="/register/form/player" method="post">
	<div class="container-fluid">
	    {{>reg/common/header}}
        <div class="form-group">
            <label for="education" class="control-form">Education:</label>
            <textarea class="form-control" name="education"></textarea>
        </div>
        <div class="form-group">
            <label for="hockey_history" class="control-form">Hockey History:</label>
            <textarea class="form-control" name="hockey_history"></textarea>
        </div>    
            <div class="form-group">
            <label for="other_sports" class="control-form">Talk About Any Other Sports You've Played:</label>
            <textarea class="form-control" name="other_sports"></textarea>
        </div>
        <div class="form-group">
            <label for="career_highlights" class="control-form">Tell us about any awards or other highlights:</label>
            <textarea class="form-control" name="career_highlights"></textarea>
        </div>
     <hr>    
      <progress value="5" max="6"></progress><br>
      <button type="button" class="btn  back">Back</button>  
      <input type="submit" class="btn next" value="Submit">
    </div>
</form>


