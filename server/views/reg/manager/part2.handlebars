<form id="registration-form" action="/register/submit/manager" method="post">
	<div class="container-fluid">
	  {{> reg/common/header}}  
      {{> reg/common/apparel}}
    <div class="form-group">
        <label for="password-confirm">Which division would you prefer to work with?</label><br>
        <input type="radio" name="division" value="Men's">Men's <br>
        <input type="radio" name="division" value="Women's">Women's <br>
        <input type="radio" name="division" value="Junior's">Junior's<br>
        <input type="radio" name="division" value="Men's Masters">Men's Masters <br>
        <input type="radio" name="division" value="Women's Masters">Women's Masters
    </div>
    <div class="form-group">
        <label for="username">Select a Username:</label><br>
        <input type="text" name="username" required>
    </div>
    <div class="form-group">
        <label for="password">Select a Password:</label><br>
        <input type="password" name="password" required>
    </div>
    <div class="form-group">
        <label for="password-confirm">Confirm Password:</label><br>
        <input type="password" name="password-confirm" required>
    </div>            
      
  <hr>
  <progress value="3" max="6"></progress><br>
  <a href="/register/manager?part=1" class="btn btn-default">Back</a>
  <input type="submit" class="btn btn-success pull-right" value="Next">
</div>
</form>