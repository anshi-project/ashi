<form class="login-form form-horizontal" method="post" action="/auth">
	<div class="container-fluid">
	{{#if error}}
		<div class="alert alert-danger" role="alert">
			<p>Error: Incorrect username and/or password</p>
		</div>
	{{else if success}}
		<div class="alert alert-success" role="alert">
			<p>Your password was successfully reset. You may now log in.</p>
		</div>		
	{{/if}}
		<div class="form-group">
			<label for="username" class="control-label col-sm-2">Username:</label>
			<div class="col-sm-10">
				<input type="text" name="username" class="form-control" required>
			</div>
		</div>
		<div class="form-group">	
			<label for="password" class="control-label col-sm-2">Password:</label>
			<div class="col-sm-10">
				<input type="password" name="password" class="form-control" required>
			</div>
		</div>
		<input type="submit" class="btn-primary btn-md pull-right" value="Log In">
		<div class="text-center">
			<a href="/account/reset">Forgot your password?</a>
		</div>
		<span class="clearfix"></span>
	</div>
</form>

